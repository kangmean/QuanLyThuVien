@if (User.Identity.IsAuthenticated)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-star me-2"></i>
                @(userRating != null ? "Cập nhật đánh giá" : "Đánh giá tài liệu")
            </h5>
        </div>
