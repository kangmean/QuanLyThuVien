@functions {
    // Hàm format file size
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double len = bytes;

        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }

        return $"{len:0.##} {sizes[order]}";
    }
}

@section Scripts {
    <script>
        // Debug info
        console.log('Document ID:', @Model.Id);
        console.log('User authenticated:', '@User.Identity.IsAuthenticated' === 'True');

        // Simple Star Rating Handler
        $(document).ready(function() {
            // Star selection using star-btn clicks
            $('.star-btn').click(function(e) {
                e.preventDefault();
                var starId = $(this).attr('for');
                
                // Check the corresponding radio button
                $('#' + starId).prop('checked', true);
                
                // Update visual display
                var score = starId.replace('star', '');
                updateStarDisplay(score);
                
                // Also trigger change event on radio button
                $('#' + starId).trigger('change');
            });
            
            // Initialize from existing rating
            var checked = $('input[name="score"]:checked');
            if (checked.length) {
                updateStarDisplay(checked.val());
            }
            
            // Form submission
            $('#ratingForm').submit(function(e) {
                e.preventDefault();
                submitRating();
            });
            
            // Load reviews
            loadReviews(1);
            
            // Bookmark functionality - THÊM VÀO ĐÂY
            // Khởi tạo trạng thái bookmark
            checkBookmarkStatus();

            // Xử lý click bookmark button
            $('#bookmarkBtn').click(function () {
                toggleBookmark();
            });
        });
        
        function updateStarDisplay(value) {
            var starsHtml = '';
            for (var i = 0; i < value; i++) {
                starsHtml += '<i class="bi bi-star-fill"></i>';
            }
            $('#selectedStars').html(
                '<span class="text-warning">' + starsHtml + '</span>' +
                '<span class="fw-bold ms-2">' + value + ' / 5 sao</span>'
            );
        }
        
        function submitRating() {
            var score = $('input[name="score"]:checked').val();
            
            if (!score) {
                alert('Vui lòng chọn số sao đánh giá');
                return;
            }
            
            console.log('Submitting rating:', score);
            
            var formData = $('#ratingForm').serialize();
            
            $.ajax({
                url: $('#ratingForm').attr('action'),
                type: 'POST',
                data: formData,
                success: function(response) {
                    console.log('Submit response:', response);
                    
                    if (response.success) {
                        alert('✅ ' + (response.message || 'Đánh giá đã được lưu!'));
                        // Update stats immediately
                        updateStatsAfterRating(response);
                        // Reload reviews
                        loadReviews(1);
                        
                        // Update UI for existing rating
                        $('input[name="score"][value="' + score + '"]').prop('checked', true);
                        updateStarDisplay(score);
                    } else {
                        alert('❌ ' + (response.message || 'Có lỗi xảy ra'));
                    }
                },
                error: function(xhr) {
                    console.error('Error:', xhr.responseText);
                    alert('❌ Lỗi kết nối server');
                }
            });
        }
        
        function updateStatsAfterRating(response) {
            // Update average rating
            if (response.averageRating) {
                $('.stat-number').eq(2).text(response.averageRating);
            }
            
            // Update rating count
            if (response.ratingCount) {
                $('.stat-label').eq(2).find('small').text('(' + response.ratingCount + ' đánh giá)');
                $('.badge.bg-primary').text(response.ratingCount + ' đánh giá');
            }
        }

        // SIMPLIFIED REVIEWS LOADING
        let currentPage = 1;
        let isLoading = false;

        function loadReviews(page) {
            if (isLoading) return;
            isLoading = true;

            console.log('Loading reviews for document:', @Model.Id);

            $('#reviewsContainer').html('<div class="text-center py-4"><div class="spinner-border"></div><p>Đang tải...</p></div>');

            // Try AJAX first
            $.ajax({
                url: '/Ratings/GetRatings',
                type: 'GET',
                data: { documentId: @Model.Id, page: page },
                success: function(data) {
                    console.log('AJAX Success:', data);
                    if (data && data.success) {
                        displayReviews(data.ratings, page, data.hasMore);
                    } else {
                        // Fallback to direct render
                        renderReviewsDirectly();
                    }
                    isLoading = false;
                },
                error: function() {
                    console.log('AJAX failed, using fallback');
                    renderReviewsDirectly();
                    isLoading = false;
                }
            });
        } // THIẾU NÀY

        function displayReviews(ratings, page, hasMore) {
            if (!ratings || ratings.length === 0) {
                if (page === 1) {
                    $('#reviewsContainer').html(
                        '<div class="text-center py-4 text-muted">' +
                        '<i class="bi bi-chat-dots fs-1"></i>' +
                        '<p class="mt-2">Chưa có đánh giá nào</p>' +
                        '</div>'
                    );
                }
                $('#loadMoreContainer').hide();
                return;
            }

            var html = '';
            for (var i = 0; i < ratings.length; i++) {
                var review = ratings[i];
                
                var starsHtml = '';
                for (var s = 1; s <= 5; s++) {
                    starsHtml += '<i class="bi ' + (s <= review.score ? 'bi-star-fill' : 'bi-star') + ' text-warning me-1"></i>';
                }

                var deleteBtn = review.isCurrentUser 
                    ? '<button class="btn btn-sm btn-outline-danger btn-delete-rating" data-rating-id="' + review.id + '"><i class="bi bi-trash"></i></button>'
                    : '';

                html += `
                    <div class="review-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <div class="d-flex align-items-center">
                                    <div class="me-2">${starsHtml}</div>
                                    <div>
                                        <strong>${review.userName}</strong><br>
                                        <small class="text-muted">${review.createdAt}</small>
                                    </div>
                                </div>
                            </div>
                            ${deleteBtn}
                        </div>
                        ${review.comment ? '<div class="mt-2 ps-4">' + review.comment + '</div>' : ''}
                    </div>
                `;
            }

            if (page === 1) {
                $('#reviewsContainer').html(html);
            } else {
                $('#reviewsContainer').append(html);
            }

            if (hasMore) {
                $('#loadMoreContainer').show();
            } else {
                $('#loadMoreContainer').hide();
            }
        }

        // Fallback: Direct rendering from Model
        function renderReviewsDirectly() {
            console.log('Rendering reviews directly from Model');
            
            @if (Model.Ratings != null && Model.Ratings.Any())
            {
                <text>
                var ratings = @Html.Raw(Json.Serialize(Model.Ratings.OrderByDescending(r => r.CreatedAt).Select(r => new {
                    id = r.Id,
                    userName = r.User?.UserName ?? "Ẩn danh",
                    score = r.Score,
                    comment = r.Comment,
                    createdAt = r.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                })));
                
                displayReviews(ratings, 1, false);
                </text>
            }
            else
            {
                <text>
                $('#reviewsContainer').html(
                    '<div class="text-center py-4 text-muted">' +
                    '<i class="bi bi-chat-dots fs-1"></i>' +
                    '<p class="mt-2">Chưa có đánh giá nào</p>' +
                    '</div>'
                );
                $('#loadMoreContainer').hide();
                </text>
            }
        }

        // Load more button
        $('#loadMoreBtn').click(function() {
            currentPage++;
            loadReviews(currentPage);
        });

        // Delete rating
        function deleteRating(ratingId) {
            if (confirm('Xóa đánh giá này?')) {
                $.post('/Ratings/Delete', { id: ratingId }, function(response) {
                    if (response.success) {
                        loadReviews(1);
                        alert('Đã xóa đánh giá');
                    } else {
                        alert('Lỗi: ' + response.message);
                    }
                });
            }
        }

        $(document).on('click', '.btn-delete-rating', function() {
            var ratingId = $(this).data('rating-id');
            deleteRating(ratingId);
        });

        // ================= BOOKMARK FUNCTIONS =================
        function checkBookmarkStatus() {
            var documentId = $('#bookmarkBtn').data('document-id');

            $.get('/Bookmarks/Check?documentId=' + documentId, function (response) {
                if (response.isBookmarked) {
                    updateBookmarkUI(true);
                }
            });
        }

        function toggleBookmark() {
            var documentId = $('#bookmarkBtn').data('document-id');
            var btn = $('#bookmarkBtn');
            var icon = btn.find('i');
            var text = $('#bookmarkText');

            // Disable button trong khi loading
            btn.prop('disabled', true);
            icon.removeClass('bi-bookmark bi-bookmark-fill').addClass('bi-hourglass');

            $.post('/Bookmarks/Toggle', { documentId: documentId }, function (response) {
                if (response.success) {
                    updateBookmarkUI(response.isBookmarked);

                    // Show toast notification
                    showToast(response.message, 'success');
                } else {
                    showToast(response.message, 'error');
                }

                // Re-enable button
                btn.prop('disabled', false);
            }).fail(function () {
                showToast('Có lỗi xảy ra', 'error');
                btn.prop('disabled', false);
            });
        }

        function updateBookmarkUI(isBookmarked) {
            var btn = $('#bookmarkBtn');
            var icon = btn.find('i');
            var text = $('#bookmarkText');

            if (isBookmarked) {
                btn.removeClass('btn-outline-primary').addClass('btn-primary');
                icon.removeClass('bi-bookmark').addClass('bi-bookmark-fill');
                text.text(' Đã bookmark');
            } else {
                btn.removeClass('btn-primary').addClass('btn-outline-primary');
                icon.removeClass('bi-bookmark-fill').addClass('bi-bookmark');
                text.text(' Bookmark');
            }
        }

        function showToast(message, type = 'info') {
            var toast = `<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                <div class="toast show" role="alert">
                    <div class="toast-header bg-${type === 'success' ? 'success' : 'danger'} text-white">
                        <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle'} me-2"></i>
                        <strong class="me-auto">Thông báo</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">${message}</div>
                </div>
            </div>`;

            $('body').append(toast);

            // Tự động xóa sau 3 giây
            setTimeout(function () {
                $('.toast').remove();
            }, 3000);
        }
        // ================= END BOOKMARK FUNCTIONS =================
    </script>
    
