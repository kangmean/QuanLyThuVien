                <input type="hidden" name="documentId" value="@Model.Id" />

                <!-- Simple Star Selection -->
                <div class="mb-4">
                    <label class="form-label fw-bold mb-3">Chọn số sao:</label>
                    
                    <!-- Star Buttons -->
                    <div class="d-flex justify-content-center gap-2 mb-4">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div>
                                <input type="radio" id="star@(i)" name="score" value="@i" 
                                       class="d-none"
                                       @(userRating?.Score == i ? "checked" : "") />
                                <label for="star@(i)" class="star-btn">
                                    <div class="text-center">
                                        <div class="fs-3 fw-bold mb-1">@i</div>
                                        <div class="stars-small">
                                            @for (int s = 1; s <= i; s++)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                        </div>
                                        <div class="small mt-1">sao</div>
                                    </div>
                                </label>
                            </div>
                        }
                    </div>
                    
                    <!-- Selected Display -->
                    <div class="text-center p-3 bg-light rounded border">
                        <div id="selectedStars" class="fs-4">
                            @if (userRating != null)
                            {
                                <span class="text-warning">
                                    @for (int i = 0; i < userRating.Score; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                </span>
                                <span class="fw-bold ms-2">@userRating.Score / 5 sao</span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa chọn đánh giá</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Comment -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Nhận xét (không bắt buộc):</label>
                    <textarea name="comment" class="form-control" rows="3"
                          placeholder="Chia sẻ cảm nhận của bạn...">@userRating?.Comment</textarea>
                    <div class="form-text">Tối đa 500 ký tự</div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi @(userRating != null ? "bi-check-circle" : "bi-star") me-1"></i>
                        @(userRating != null ? "Cập nhật" : "Gửi đánh giá")
                    </button>
                    
                    @if (userRating != null)
                    {
                        <button type="button" class="btn btn-outline-danger btn-sm"
                                onclick="deleteRating(@userRating.Id)">
                            <i class="bi bi-trash me-1"></i> Xóa
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
}

            <!-- Reviews List -->
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Nhận xét từ người dùng</h5>
                    <span class="badge bg-primary">@Model.RatingCount đánh giá</span>
                </div>
                <div class="card-body" id="reviewsContainer">
                    <!-- Reviews will be loaded via AJAX -->
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                        <p class="mt-2 text-muted">Đang tải đánh giá...</p>
                    </div>
                </div>
                <div class="card-footer text-center" id="loadMoreContainer" style="display: none;">
                    <button id="loadMoreBtn" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-chevron-down me-1"></i> Xem thêm đánh giá
                    </button>
                </div>
            </div>
        </div>

        <!-- Right Column - Sidebar -->
        <div class="col-lg-4">
            <!-- Preview Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-eye me-2"></i>Xem trước</h6>
                </div>
                <div class="card-body text-center">
                    @switch (Model.FileType.ToLower())
                    {
                        case ".pdf":
                            <i class="bi bi-file-earmark-pdf text-danger display-1"></i>
                            break;
                        case ".docx":
                        case ".doc":
                            <i class="bi bi-file-earmark-word text-primary display-1"></i>
                            break;
                        case ".pptx":
                        case ".ppt":
                            <i class="bi bi-file-earmark-ppt text-warning display-1"></i>
