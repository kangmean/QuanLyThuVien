@model IEnumerable<QuanLyThuVien.Models.Document>

@{
    ViewData["Title"] = "Danh sách tài liệu";
}

<h1>📚 Danh sách tài liệu</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">📤 Upload tài liệu mới</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Tiêu đề</th>
            <th>Mô tả</th>
            <th>Loại file</th>
            <th>Kích thước</th>
            <th>Ngày upload</th>
            <th>Trường</th>
            <th>Môn học</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                </td>
                <td>
                    @{
                        var shortDescription = item.Description != null && item.Description.Length > 50
                        ? item.Description.Substring(0, 50) + "..."
                        : item.Description;
                    }
                    @shortDescription
                </td>
                <td>
                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.FileType)</span>
                </td>
                <td>
                    @{
                        var fileSizeKB = item.FileSize / 1024;
                        var fileSizeMB = item.FileSize / (1024 * 1024);
                        var displaySize = fileSizeMB >= 1 ? $"{fileSizeMB:F1} MB" : $"{fileSizeKB} KB";
                    }
                    @displaySize
                </td>
                <td>
                    @item.UploadDate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @if (item.University != null)
                    {
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.University.Name)</span>
                    }
                    else
                    {
                        <span class="text-muted">Chưa chọn</span>
                    }
                </td>
                <td>
                    @if (item.Subject != null)
                    {
                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Subject.Name)</span>
                    }
                    else
                    {
                        <span class="text-muted">Chưa chọn</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Chi tiết">
                            👁️
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Sửa">
                            ✏️
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                            🗑️
                        </a>
                        <!-- THÊM NÚT DOWNLOAD -->
                        <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Tải xuống">
                            📥
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        📝 Chưa có tài liệu nào. Hãy <a asp-action="Create" class="alert-link">upload tài liệu đầu tiên</a>!
    </div>
}