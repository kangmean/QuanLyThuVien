@model IEnumerable<Rating>
@using QuanLyThuVien.Models

@{
    ViewData["Title"] = "Đánh giá của tôi";
    var hasRatings = Model.Any();
    var totalCount = ViewBag.TotalCount ?? 0;
    var averageRating = ViewBag.AverageRating ?? 0;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">⭐ Đánh giá của tôi</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-6 mb-2">
                        <i class="bi bi-star text-warning"></i> Đánh giá của tôi
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        Xem lại tất cả đánh giá bạn đã đóng góp cho cộng đồng
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-card bg-light p-3 rounded-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-stars text-warning fs-2 me-3"></i>
                                    <div>
                                        <div class="fs-4 fw-bold">@totalCount</div>
                                        <div class="text-muted small">Đánh giá</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-card bg-light p-3 rounded-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-star-fill text-warning fs-2 me-3"></i>
                                    <div>
                                        <div class="fs-4 fw-bold">@averageRating</div>
                                        <div class="text-muted small">Điểm TB</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!hasRatings)
    {
        <!-- Empty State -->
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <div class="empty-state-icon mb-4">
                    <i class="bi bi-star display-1 text-muted"></i>
                </div>
                <h3 class="mb-3">Chưa có đánh giá nào</h3>
                <p class="text-muted mb-4">
                    Đánh giá tài liệu để giúp người khác lựa chọn tài liệu phù hợp!
                </p>
                <a asp-controller="Documents" asp-action="Index" class="btn btn-warning btn-lg px-4">
                    <i class="bi bi-search me-2"></i> Tìm tài liệu để đánh giá
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Ratings List -->
        <div class="row">
            @foreach (var rating in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-body p-4">
                            <!-- Document Info -->
                            <div class="mb-3">
                                <h5 class="card-title mb-2">
                                    <a asp-controller="Documents" asp-action="Details" asp-route-id="@rating.DocumentId" 
                                       class="text-decoration-none text-dark">
                                        @rating.Document?.Title
                                    </a>
                                </h5>
                                
                                @if (rating.Document?.University != null)
                                {
                                    <div class="mb-1">
                                        <i class="bi bi-building text-primary me-1"></i>
                                        <small>@rating.Document.University.Name</small>
                                    </div>
                                }
                                
                                @if (rating.Document?.Subject != null)
                                {
                                    <div class="mb-1">
                                        <i class="bi bi-book text-success me-1"></i>
                                        <small>@rating.Document.Subject.Name</small>
                                    </div>
                                }
                            </div>
                            
                            <!-- Rating Stars -->
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-3">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi @(i <= rating.Score ? "bi-star-fill" : "bi-star") text-warning fs-4"></i>
                                        }
                                    </div>
                                    <span class="badge bg-warning text-dark fs-6">@rating.Score / 5</span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(rating.Comment))
                                {
                                    <div class="rating-comment bg-light p-3 rounded-3">
                                        <i class="bi bi-chat-quote text-muted me-2"></i>
                                        "@rating.Comment"
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted small">
                                        <i class="bi bi-chat me-1"></i> Không có nhận xét
                                    </div>
                                }
                            </div>
                            
                            <!-- Metadata & Actions -->
                            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                <div class="text-muted small">
                                    <i class="bi bi-clock me-1"></i>
                                    @rating.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    @if (rating.UpdatedAt.HasValue)
                                    {
                                        <br>
                                        <i class="bi bi-arrow-clockwise me-1"></i>
                                        <span class="text-muted">Cập nhật: @rating.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                </div>
                                
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Documents" asp-action="Details" asp-route-id="@rating.DocumentId" 
                                       class="btn btn-outline-primary" title="Xem tài liệu">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-warning btn-edit-rating" 
                                            data-rating-id="@rating.Id"
                                            data-score="@rating.Score"
                                            data-comment="@rating.Comment"
                                            data-document-id="@rating.DocumentId"
                                            title="Sửa đánh giá">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-danger btn-delete-rating" 
                                            data-rating-id="@rating.Id"
                                            title="Xóa đánh giá">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <!-- Previous Button -->
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="MyRatings" asp-route-page="@(ViewBag.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    
                    <!-- Page Numbers -->
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="MyRatings" asp-route-page="@i">@i</a>
                        </li>
                    }
                    
                    <!-- Next Button -->
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="MyRatings" asp-route-page="@(ViewBag.CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
                
                <!-- Page Info -->
                <div class="text-center text-muted small mt-2">
                    Trang @ViewBag.CurrentPage/@ViewBag.TotalPages • 
                    Hiển thị @Model.Count()/@totalCount đánh giá
                </div>
            </nav>
        }
        
        <!-- Statistics -->
        <div class="row mt-4">
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-light border-0 text-center p-3">
                    <div class="text-warning fs-2">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="fw-bold fs-4">@Model.Count(r => r.Score == 5)</div>
                    <div class="text-muted small">5 sao</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-light border-0 text-center p-3">
                    <div class="text-warning fs-2">
                        <i class="bi bi-star-half"></i>
                    </div>
                    <div class="fw-bold fs-4">@Model.Count(r => r.Score >= 3 && r.Score <= 4)</div>
                    <div class="text-muted small">3-4 sao</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-light border-0 text-center p-3">
                    <div class="text-warning fs-2">
                        <i class="bi bi-star"></i>
                    </div>
                    <div class="fw-bold fs-4">@Model.Count(r => r.Score <= 2)</div>
                    <div class="text-muted small">1-2 sao</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-light border-0 text-center p-3">
                    <div class="text-info fs-2">
                        <i class="bi bi-chat-quote"></i>
                    </div>
                    <div class="fw-bold fs-4">@Model.Count(r => !string.IsNullOrEmpty(r.Comment))</div>
                    <div class="text-muted small">Có nhận xét</div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Edit Rating Modal -->
<div class="modal fade" id="editRatingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">
                    <i class="bi bi-pencil me-2"></i>Sửa đánh giá
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editRatingForm">
                    <input type="hidden" id="editRatingId" name="id" />
                    <input type="hidden" id="editDocumentId" name="documentId" />
                    
                    <!-- Star Rating -->
                    <div class="mb-4">
                        <label class="form-label fw-bold mb-3">Chọn số sao:</label>
                        <div class="d-flex justify-content-center gap-2 mb-4">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div>
                                    <input type="radio" id="editStar@(i)" name="score" value="@i" class="d-none edit-star-radio" />
                                    <label for="editStar@(i)" class="star-btn">
                                        <div class="text-center">
                                            <div class="fs-3 fw-bold mb-1">@i</div>
                                            <div class="stars-small">
                                                @for (int s = 1; s <= i; s++)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                            </div>
                                            <div class="small mt-1">sao</div>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                        <div class="text-center p-3 bg-light rounded border">
                            <div id="editSelectedStars" class="fs-4">
                                <span class="text-muted">Chưa chọn đánh giá</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Comment -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhận xét:</label>
                        <textarea id="editComment" name="comment" class="form-control" rows="3" 
                                  placeholder="Chia sẻ cảm nhận của bạn..."></textarea>
                        <div class="form-text">Tối đa 500 ký tự</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-warning" id="saveEditRating">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-card {
            transition: all 0.3s ease;
            border-radius: 12px;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        
        .rating-comment {
            border-left: 4px solid #ffc107;
            font-style: italic;
        }
        
        .stat-card {
            transition: transform 0.3s;
        }
        
        .stat-card:hover {
            transform: scale(1.05);
        }
        
        .star-btn {
            display: block;
            width: 70px;
            padding: 12px 0;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .star-btn:hover {
            border-color: #ffc107;
            background-color: #fff9e6;
        }
        
        input[type="radio"]:checked + .star-btn {
            border-color: #ffc107;
            background-color: #fff3cd;
            box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.2);
        }
        
        .stars-small .bi-star-fill {
            font-size: 0.9rem;
            margin: 0 1px;
        }
        
        .empty-state-icon {
            opacity: 0.5;
        }
        
        .breadcrumb {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 12px 16px;
        }
        
        .btn-group .btn {
            border-radius: 4px !important;
            margin: 0 2px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Edit Rating Modal
            $('.btn-edit-rating').click(function () {
                var ratingId = $(this).data('rating-id');
                var score = $(this).data('score');
                var comment = $(this).data('comment');
                var documentId = $(this).data('document-id');
                
                // Set form values
                $('#editRatingId').val(ratingId);
                $('#editDocumentId').val(documentId);
                $('#editComment').val(comment || '');
                
                // Set star selection
                $('.edit-star-radio').prop('checked', false);
                $('#editStar' + score).prop('checked', true);
                updateEditStarDisplay(score);
                
                // Show modal
                $('#editRatingModal').modal('show');
            });
            
            // Update star display in modal
            function updateEditStarDisplay(value) {
                var starsHtml = '';
                for (var i = 0; i < value; i++) {
                    starsHtml += '<i class="bi bi-star-fill"></i>';
                }
                $('#editSelectedStars').html(
                    '<span class="text-warning">' + starsHtml + '</span>' +
                    '<span class="fw-bold ms-2">' + value + ' / 5 sao</span>'
                );
            }
            
            // Star selection in modal
            $('.edit-star-radio').change(function () {
                var selectedValue = $(this).val();
                updateEditStarDisplay(selectedValue);
            });
            
            // Save edited rating
            $('#saveEditRating').click(function () {
                var ratingId = $('#editRatingId').val();
                var score = $('input[name="score"]:checked').val();
                var comment = $('#editComment').val();
                
                if (!score) {
                    alert('Vui lòng chọn số sao');
                    return;
                }
                
                // Disable button and show loading
                var btn = $(this);
                var originalText = btn.html();
                btn.prop('disabled', true).html('<i class="bi bi-hourglass"></i> Đang lưu...');
                
                $.ajax({
                    url: '/Ratings/SubmitRating',
                    type: 'POST',
                    data: {
                        documentId: $('#editDocumentId').val(),
                        score: score,
                        comment: comment
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#editRatingModal').modal('hide');
                            showToast('Đã cập nhật đánh giá', 'success');
                            // Reload page after 1 second
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        } else {
                            showToast('Lỗi: ' + response.message, 'error');
                        }
                        btn.prop('disabled', false).html(originalText);
                    },
                    error: function () {
                        showToast('Có lỗi xảy ra', 'error');
                        btn.prop('disabled', false).html(originalText);
                    }
                });
            });
            
            // Delete rating
            $('.btn-delete-rating').click(function () {
                var ratingId = $(this).data('rating-id');
                var card = $(this).closest('.col-md-6');
                var documentTitle = card.find('.card-title').text().trim();
                
                if (confirm('Xóa đánh giá cho "' + documentTitle + '"?')) {
                    $.post('/Ratings/Delete', { id: ratingId }, function (response) {
                        if (response.success) {
                            card.fadeOut(300, function () {
                                $(this).remove();
                                showToast('Đã xóa đánh giá', 'success');
                                
                                // Reload if no ratings left
                                if ($('.col-md-6').length === 0) {
                                    setTimeout(function () {
                                        location.reload();
                                    }, 500);
                                }
                            });
                        } else {
                            showToast('Lỗi: ' + response.message, 'error');
                        }
                    });
                }
            });
            
            // Toast notification
            function showToast(message, type = 'info') {
                var icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle';
                var bgColor = type === 'success' ? 'bg-success' : 'bg-danger';
                
                var toast = `
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
                        <div class="toast show" role="alert">
                            <div class="toast-header ${bgColor} text-white">
                                <i class="bi ${icon} me-2"></i>
                                <strong class="me-auto">Thông báo</strong>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                            </div>
                            <div class="toast-body">${message}</div>
                        </div>
                    </div>`;
                
                $('body').append(toast);
                
                // Auto remove after 3 seconds
                setTimeout(function () {
                    $('.toast').fadeOut(300, function () {
                        $(this).remove();
                    });
                }, 3000);
            }
        });
    </script>
}