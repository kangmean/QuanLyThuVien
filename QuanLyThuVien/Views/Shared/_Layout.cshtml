<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyThuVien</title>
    
    <!-- ====== DARK MODE SCRIPT PHẢI Ở ĐÂU ĐẦU TIÊN ====== -->
    <script>
        // Load theme trước khi trang render
        (function() {
            try {
                const savedTheme = localStorage.getItem('theme');
                const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                
                if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
            } catch (e) {
                console.error('Dark mode init error:', e);
            }
            
            // Add loading class to body immediately
            document.addEventListener('DOMContentLoaded', function() {
                document.body.classList.add('loaded');
            });
        })();
    </script>
    
    <!-- Critical CSS to prevent flicker -->
    <style>
        body {
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        body.loaded {
            opacity: 1;
        }
    </style>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyThuVien.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book text-primary"></i> QuanLyThuVien
                </a>
                
                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Navbar Content -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Search Form -->
                    <form method="get" asp-action="Search" asp-controller="Home" class="d-flex me-3">
                        <div class="input-group input-group-sm">
                            <input type="text" name="searchString" class="form-control" 
                                   placeholder="Tìm tài liệu..." style="width: 180px;" />
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Main Navigation -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        
                        <!-- Documents -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Documents" asp-action="Index">
                                <i class="bi bi-file-earmark-text me-1"></i>Tài liệu
                            </a>
                        </li>
                        
                        <!-- Dashboard (chỉ hiện khi đăng nhập) -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1 text-primary"></i>Dashboard
                                </a>
                            </li>
                            
                            <!-- Bookmarks -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Bookmarks" asp-action="Index">
                                    <i class="bi bi-bookmark-star me-1 text-warning"></i>Bookmarks
                                </a>
                            </li>
                        }
                        
                        <!-- Privacy -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Login/User Menu -->
                    <partial name="_LoginPartial" />
                    
                    <!-- ====== DARK MODE TOGGLE BUTTON ====== -->
                    <div class="dark-mode-toggle">
                        <button id="darkModeToggle" class="btn btn-sm" aria-label="Toggle dark mode">
                            <i id="darkModeIcon" class="bi bi-moon"></i>
                            <span id="darkModeText">Dark Mode</span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QuanLyThuVien - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="bi bi-shield-lock me-1"></i>Privacy
            </a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Dark Mode JavaScript -->
    <script>
        // Dark Mode Functionality - GLOBAL
        $(document).ready(function() {
            // Theme already set by inline script, just update UI
            function updateDarkModeUI() {
                const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                
                if (isDark) {
                    $('#darkModeIcon').removeClass('bi-moon').addClass('bi-sun');
                    $('#darkModeText').text('Light Mode');
                    $('#darkModeToggle').removeClass('btn-outline-dark').addClass('btn-outline-light');
                } else {
                    $('#darkModeIcon').removeClass('bi-sun').addClass('bi-moon');
                    $('#darkModeText').text('Dark Mode');
                    $('#darkModeToggle').removeClass('btn-outline-light').addClass('btn-outline-dark');
                }
            }
            
            function toggleDarkMode() {
                const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                
                if (isDark) {
                    document.documentElement.removeAttribute('data-theme');
                    localStorage.setItem('theme', 'light');
                } else {
                    document.documentElement.setAttribute('data-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                }
                
                updateDarkModeUI();
            }
            
            // Initialize UI
            updateDarkModeUI();
            
            // Bind click event
            $('#darkModeToggle').click(toggleDarkMode);
            
            // Listen for system theme changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
                if (!localStorage.getItem('theme')) {
                    if (e.matches) {
                        document.documentElement.setAttribute('data-theme', 'dark');
                    } else {
                        document.documentElement.removeAttribute('data-theme');
                    }
                    updateDarkModeUI();
                }
            });
            
            // Make sure body is visible
            document.body.classList.add('loaded');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>